        </div>

        <div class="courses-grid" id="coursesGrid">
            {{#each courses}}
                <div class="language-card glass" data-category="{{this.category}}">
                    <div class="lang-header">
                        <div class="lang-icon">{{{getCourseIcon this.category this.slug this.title}}}</div>
